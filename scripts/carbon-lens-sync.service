WorkingDirectory=/home/aneeq/Documents/Fiver/react-dashboard/CL_site/mongo-pg
EnvironmentFile=/home/aneeq/Documents/Fiver/react-dashboard/CL_site/mongo-pg/.env
ExecStart=/home/aneeq/Documents/Fiver/react-dashboard/CL_site/mongo-pg/.venv/bin/meltano run tap-mongodb target-postgres
